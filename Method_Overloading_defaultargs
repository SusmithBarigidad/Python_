class Mat:
    def sum(self,a=None,b=None,c=None):
        
        if a!=None and b!=None and c!=None:
            print('The sum of three numbers is:',a+b+c)
        elif a!=None and b!=None:
            print('The sum of two numbers is:',a+b)

        else:
            print('Please enter two numbers!')

t=Mat()
t.sum(23,23,20)
t.sum(2)
t.sum(23,22)
